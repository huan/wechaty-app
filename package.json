{
  "name": "wechaty-app",
  "version": "0.0.2",
  "description": "Wechaty APP",
  "angular-cli": {},
  "main": "index.js",
  "scripts": {
    "start": "npm run start:fg &",
    "start:fg": "ng serve --live-reload-port=8081",
    "stop": "ps ax | grep angular-cli | grep -v grep && killall angular-cli || echo 'no angular-cli need kill'",
    "postinstall": "typings install",
    "lint": "tslint src/**/*.ts",
    "test": "npm run lint && npm run unit && npm run e2e",
    "unit": "ng test --watch=false",
    "pree2e": "npm start && webdriver-manager update",
    "e2e": "protractor config/protractor.conf.js",
    "poste2e": "npm stop",
    "build": "rm -rf dist && ng build --environment=production",
    "deploy": "ng github-pages:deploy --message 'Deploy by NPM'",
    "Xprepublish": "npm run build && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zixia/wechaty-app.git"
  },
  "keywords": [
    "wechaty",
    "angular",
    "angular2",
    "component",
    "web",
    "zixia",
    "web component"
  ],
  "author": "Zhuohuan LI <zixia@zixia.net>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zixia/wechaty-app/issues"
  },
  "homepage": "https://github.com/zixia/wechaty-app#readme",
  "engines": {
    "node": ">= 5.0.0"
  },
  "dependencies": {
    "@angular/common": "2.3.0",
    "@angular/compiler": "2.3.1",
    "@angular/core": "2.3.0",
    "@angular/forms": "2.3.1",
    "@angular/http": "2.3.0",
    "@angular/platform-browser": "2.3.0",
    "@angular/platform-browser-dynamic": "2.3.0",
    "@angular/router": "3.3.0",
    "brolog": "latest",
    "es6-shim": "0.35.2",
    "reflect-metadata": "0.1.8",
    "rxjs": "5.0.0",
    "systemjs": "0.19.41",
    "zone.js": "0.7.2"
  },
  "devDependencies": {
    "angular-cli": "1.0.0-beta.22-1",
    "codelyzer": "2.0.0-beta.2",
    "ember-cli-inject-live-reload": "1.4.1",
    "jasmine-core": "2.5.2",
    "jasmine-spec-reporter": "2.7.0",
    "karma": "1.3.0",
    "karma-chrome-launcher": "2.0.0",
    "karma-jasmine": "1.1.0",
    "node-sass": "^4.0.0",
    "protractor": "4.0.13",
    "sinon": "^2.0.0-pre.2",
    "ts-node": "^1.2.1",
    "tslint": "4.0.2",
    "typescript": "^2",
    "typings": "2.0.0"
  },
  "typings": "./component.d.ts",
  "typescript": {
    "main": "src/app/index.ts",
    "definition": "src/app/index.d.ts"
  }
}
