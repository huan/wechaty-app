{
  "name": "wechaty-angular",
  "version": "0.0.1",
  "description": "Wechaty Web Component for Angular 2",
  "main": "index.js",
  "scripts": {
    "lint": "tslint -c test/tslint.json 'src/**/*.ts'",
    "stylelint": "stylelint 'src/**/*.scss' --config stylelint-config.json --syntax scss",
    "unit": "karma start test/karma.conf.js",
    "e2e": "protractor test/protractor.conf.js --suite test",
    "pretest": "npm run lint",
    "test": "npm run unit && npm run e2e",
    "start": "tsc && concurrently \"npm run tsc:w\" \"npm run lite\" ",
    "lite": "lite-server",
    "tsc": "tsc -p src",
    "tsc:w": "tsc -w -p src",
    "wechaty": "echo ok",
    "clean": "rm -f app/*.{js,js.map}",
    "karma": "karma",
    "build": "ng build",
    "demo-app": "ng serve",
    "check-circular-deps": "madge --circular ./dist",
    "typings": "typings",
    "postinstall": "typings install && webdriver-manager update",
    "inline-resources": "node ./scripts/release/inline-resources.js ./dist/components",
    "deploy": "firebase deploy",
    "webdriver-manager": "webdriver-manager"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zixia/wechaty-angular.git"
  },
  "keywords": [
    "wechaty",
    "angular",
    "angular2",
    "component"
  ],
  "author": "Zhuohuan LI <zixia@zixia.net>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zixia/wechaty-angular/issues"
  },
  "homepage": "https://github.com/zixia/wechaty-angular#readme",
  "engines": {
    "node": ">= 6.0.0"
  },
  "dependencies": {
    "core-js": "^2.4.0",
    "@angular/common": "2.0.0-rc.3",
    "@angular/compiler": "2.0.0-rc.3",
    "@angular/core": "2.0.0-rc.3",
    "@angular/forms": "0.1.1",
    "@angular/http": "2.0.0-rc.3",
    "@angular/platform-browser": "2.0.0-rc.3",
    "@angular/platform-browser-dynamic": "2.0.0-rc.3",
    "@angular/router": "3.0.0-alpha.8",
    "@angular/router-deprecated": "2.0.0-rc.2",
    "@angular/upgrade": "2.0.0-rc.3",
    "systemjs": "0.19.27",
    "reflect-metadata": "^0.1.3",
    "rxjs": "5.0.0-beta.6",
    "zone.js": "^0.6.12",
    "angular2-in-memory-web-api": "0.0.13",
    "bootstrap": "^3.3.6"
  },
  "devDependencies": {
    "angular-cli": "^1.0.0-beta.8",
    "concurrently": "^2.0.0",
    "jasmine-core": "^2.4.1",
    "karma": "^1.1.0",
    "karma-chrome-launcher": "^1.0.1",
    "karma-firefox-launcher": "^1.0.0",
    "karma-jasmine": "^1.0.2",
    "karma-phantomjs-launcher": "^1.0.1",
    "lite-server": "^2.2.0",
    "protractor": "^3.3.0",
    "tslint": "^3.13.0",
    "typescript": "^1.8.10",
    "typings": "^1.0.4"
  }
}
